{
  "manifest_version": 3,
  "name": "Skoop",
  "short_name": "N-C-S",
  "version": "0.0.1",
  "description": "Skoop extension ",
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "192": "/icons/icon192.png"
  },
  "permissions": [
    "identity",
    "https://www.googleapis.com/",
    "scripting",
    "activeTab",
    "chrome-extension://lekjjhjjcjghpjffgamknpaemfmplbml/api/auth/providers"
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "nextjs_assets/main.js", "nextjs_assets/commons.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["gmailContentScript.js"]
    }
  ],
  "oauth2": {
    "client_id": "148000187265-6rut37g649kj1tehe5o3mkpitdfhfk71.apps.googleusercontent.com",
    "scopes": ["openid", "profile", "email", "https://www.googleapis.com/auth/contacts.readonly"]
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "index.html"
  }
}
